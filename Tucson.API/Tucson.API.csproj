    <PackageReference Include="NSwag.Annotations" Version="14.4.0" />
    <PackageReference Include="Swashbuckle.AspNetCore.Annotations" Version="8.1.1" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Tucson.Application\Tucson.Application.csproj" />
